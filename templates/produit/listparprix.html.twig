{% extends "base.html.twig" %}
{% block title %}List des produit
{% endblock %}

{% block body %}
<div class="container">

    
    {% for message in app.flashes('notice') %}
    <div class="alert alert-danger" role="alert">
        {{ message }}
    </div>
{% endfor %}
{% for message in app.flashes('succes') %}
    <div class="alert alert-success" role="alert">
        {{ message }}
    </div>
{% endfor %}
    

	<h1>Liste de tous les produits ayant un prix dans l'interval [{{ min ~ ',' ~ max }}] </h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Nom</th>
      <th scope="col">Prix</th>
      <th scope="col">Détail</th>
      <th scope="col">Supprimer</th>
    </tr>
  </thead>
    {% for produit in produits %}

<tr>
      <th scope="row">{{ produit.id}}</th>
      <td>{{ produit.name}}</td>
      <td>{{ produit.price}}</td>
      <td> <a class="btn btn-primary" href="{{ path('produit_detail',{'id':produit.id})}}">Détail</a></td>
      <td> <a class="btn btn-danger" href="{{ path('produit_delete',{'id':produit.id})}}">Delete</a></td>
    
    </tr>
    
        
    {% endfor %}
    </tbody>
</table>
</div>
{% endblock %}

