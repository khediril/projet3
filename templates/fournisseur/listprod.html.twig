{% extends 'base.html.twig' %}

{% block title %}Fournisseur{% endblock %}

{% block body %}
    <h1>Liste des produit du fournisseur {{ fournisseur.name }}</h1>

    <table class="table table-striped table-inverse table-responsive">
       
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Nom</th>
      <th scope="col">Prix</th>
      <th scope="col">Détail</th>
      <th scope="col">Supprimer</th>
    </tr>
  </thead>
    {% for produit in fournisseur.produits %}

<tr>
      <th scope="row">{{ produit.id}}</th>
      <td>{{ produit.name}}</td>
      <td>{{ produit.price}}</td>
      <td scope="row">{% set image = 'images/produits/' ~ produit.photo %}
					<img src="{{ asset(image) }}"></td>
      <td> <a class="btn btn-primary" href="{{ path('produit_detail',{'id':produit.id})}}">Détail</a></td>
      <td> <a class="btn btn-danger" href="{{ path('produit_delete',{'id':produit.id})}}">Delete</a></td>
    
    </tr>
    
        
    {% endfor %}
    </tbody>
</table>
    

    <a href="{{ path('fournisseur_index') }}">back to list</a>

    <a href="{{ path('fournisseur_edit', {'id': fournisseur.id}) }}">edit</a>

    {{ include('fournisseur/_delete_form.html.twig') }}
{% endblock %}
